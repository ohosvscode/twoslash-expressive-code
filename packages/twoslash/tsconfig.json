{
	"include": ["src/**/*.ts", "test/**/*.ts"],
	"compilerOptions": {
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"moduleResolution": "bundler",
		"module": "ESNext",
		"target": "ESNext",
		"outDir": "./dist"
	}
}
